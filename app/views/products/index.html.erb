<div class="col-lg-12 col-md-12">
    <div class="card">
        <div class="card-header card-header-warning">
            <h4 class="card-title">All products in inventory</h4>
        </div>
        <div class="card-body table-responsive">
                  <table class="table table-hover">
                    <thead class="text-warning">
                      <th>ID</th>
                      <th>Job</th>
                      <th>Type</th>
                      <th>Quantity</th>
                      <th>Size</th>
                      <th>Color</th>
                      <th>Show</th>
                      <th>Edit</th>
                      <th>Checkout</th>
                    </thead>
                    <tbody>
                      <tr>
                      <% @products.each do |product|%>
                        <td><%= product.id %></td>
                        <td><%= product.category %></td>
                        <td><%= product.subcategory %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.size %></td>
                        <td><%= product.color %></td>
                        <td><%= link_to 'Show', product %></td>
                        <td><%= link_to 'Edit', edit_product_path(product) %></td>
                        <td><%= link_to 'Checkout', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      <% end %>  
                      
                    </tbody>
                  </table>
                </div>

            </div>
        </div>
    </div>
    <%= link_to '<button class="btn btn-g btn-round " type="button">Home</button>'.html_safe, root_path %>